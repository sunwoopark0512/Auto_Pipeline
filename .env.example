# Example environment variables for Auto_Pipeline

# OpenAI API key for generating hooks
OPENAI_API_KEY=

# Notion access token
NOTION_API_TOKEN=

# Notion databases
NOTION_DB_ID=
NOTION_HOOK_DB_ID=
NOTION_KPI_DB_ID=

# Optional: Slack webhook used in GitHub Actions
SLACK_WEBHOOK_URL=

# File paths (you can keep the defaults)
TOPIC_CHANNELS_PATH=config/topic_channels.json
KEYWORD_OUTPUT_PATH=data/keyword_output_with_cpc.json
HOOK_OUTPUT_PATH=data/generated_hooks.json
FAILED_HOOK_PATH=logs/failed_keywords.json
REPARSED_OUTPUT_PATH=logs/failed_keywords_reparsed.json
UPLOADED_CACHE_PATH=data/uploaded_keywords_cache.json
FAILED_UPLOADS_PATH=logs/failed_uploads.json

# Timing parameters
API_DELAY=1.0
UPLOAD_DELAY=0.5
RETRY_DELAY=0.5
